<section data-name="portfolio" id="portfolio" class="py-20 bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 data-name="portfolio-title"
            class="text-3xl font-bold text-white mb-12 text-center">Portfolio</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for item in folders %}
                <a data-name="portfolio-item-{{ item.id }}" key="{{ item.id }}"
                    class="portfolio-item relative overflow-hidden rounded-lg"
                    href="{{ path('gallery_detail', {galleryId: item.id}) }}"
                >
                    <img src="{{ item.preview }}" alt="{{ item.name }}" class="w-full h-64 object-cover"/>
                    <div class="absolute bottom-0 left-0 right-0 bg-black bg-opacity-75 text-white p-4">
                        <h3 class="text-lg font-semibold">{{ item.name }}</h3>
                        <p class="text-sm text-gray-300">{{ item.slug }}</p>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
</section>
